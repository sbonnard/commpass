RewriteEngine on

# Masquer les extensions .php dans l'URL (réécriture interne, pas de redirection)
RewriteCond %{THE_REQUEST} /([^.]+)\.php [NC]
RewriteRule ^ %1 [L]

# Ajouter .php si le fichier sans extension est demandé
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^ %{REQUEST_URI}.php [L]
